{
	"extends": "@adonisjs/tsconfig/tsconfig.app.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable"],
		"rootDir": "./",
		"outDir": "./build",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"verbatimModuleSyntax": true,
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./resources/js/*"]
		}
	}
}
